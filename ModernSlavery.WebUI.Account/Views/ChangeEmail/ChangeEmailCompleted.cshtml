@using Microsoft.AspNetCore.Mvc
@using ModernSlavery.WebUI.Account.Controllers
@using ModernSlavery.WebUI.Shared.Classes.Extensions
@using ModernSlavery.WebUI.Shared.Interfaces
@using ModernSlavery.WebUI.Shared.Options
@model ModernSlavery.WebUI.Account.Models.ChangeEmail.ChangeEmailStatusViewModel
@inject IWebService WebService
<div class="grid-row">

    <div class="column-two-thirds">

        <div class="govuk-box-highlight">
            <h1 class="heading-large">
                Your email address has been updated
            </h1>
        </div>

        <p>You have successfully changed your account email to @Model.NewEmail</p>

        <h2 class="heading-medium">More Options</h2>
        <ul class="list">
            <li>
                <a href="@(Url.Action<ManageAccountController>(nameof(ManageAccountController.ManageAccount)))">Manage account</a>
            </li>

            <li>
                <a href="@(await WebService.RouteHelper.Get(UrlRouteOptions.Routes.RegistrationHome))">Manage organisations</a>
            </li>
        </ul>

    </div>

</div>