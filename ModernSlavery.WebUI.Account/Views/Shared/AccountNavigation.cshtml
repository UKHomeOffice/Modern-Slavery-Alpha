@using ModernSlavery.WebUI.Account.Controllers
@using ModernSlavery.WebUI.Shared.Classes.Extensions
@using ModernSlavery.WebUI.Shared.Interfaces
@using ModernSlavery.WebUI.Shared.Options
@inject IWebService WebService
@{
    var manageOrgsPath = await WebService.RouteHelper.Get(UrlRouteOptions.Routes.SubmissionHome);
    var navEntries = new[]
    {
        new {Text = "Manage Organisations", UrlPath=manageOrgsPath},
        new {Text = "Manage Account", UrlPath = Url.Action<ManageAccountController>(nameof(ManageAccountController.ManageAccount))}
    };
}
<div class="grid-row">
    <div class="column-full">
        <nav class="app-navigation govuk-clearfix">
            <ul class="app-navigation__list govuk-width-container">
                @foreach (var navItem in navEntries)
                {
                    <li class="app-navigation__list-item @(navItem.UrlPath.EndsWith(Context.Request.Path.Value) ? "app-navigation__list-item--current" : "")">
                        <a class="govuk-link govuk-link--no-visited-state app-navigation__link" href="@(navItem.UrlPath)" data-topnav="@navItem.Text">@navItem.Text</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>