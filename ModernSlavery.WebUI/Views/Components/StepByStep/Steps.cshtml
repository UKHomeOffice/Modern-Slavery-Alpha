@model List<ModernSlavery.WebUI.Views.Components.StepByStep.StepViewModel>

<ol class="app-step-nav__steps">
    @for (var i = 0; i < Model.Count; i++)
    {
        var step = Model[i];
        step.Position = i + 1;
        await Html.RenderPartialAsync("/Views/Components/StepByStep/Step.cshtml", step);
    }
</ol>

<script src="/scripts/step-by-step-navigation.js"></script>
<script src="/scripts/jquery-1.11.3.js"></script>
<script>
  var $element = $('#step-by-step-navigation');
  var stepByStepNavigation = new GOVUK.Modules.StepByStepNavigation();
  stepByStepNavigation.start($element)
</script>
