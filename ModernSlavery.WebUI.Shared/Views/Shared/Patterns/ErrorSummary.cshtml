@model Microsoft.AspNetCore.Mvc.ModelBinding.ModelStateDictionary
<div class="grid-row">

    <div class="column-two-thirds">

        <div class="error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1">

            <h2 class="heading-medium error-summary-heading" id="error-summary-title">
                There is a problem
            </h2>

            <ul class="error-summary-list">
                @foreach (var state in Model)
                {
                    @foreach (var error in state.Value.Errors)
                    {
                        <li>
                            <a href="#@(state.Key)">@Html.Raw(error.ErrorMessage)</a>
                        </li>
                    }
                }
            </ul>

        </div>

    </div>

</div>